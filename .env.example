# Environment Variables Template
# Copy this file to .env.local and fill in your actual API keys
# NEVER commit .env.local to git!

# Offline Mode - Use localStorage instead of Supabase (for when Supabase is down)
# Set to 'true' to use mock data from localStorage
VITE_OFFLINE_MODE=false

# Demo Mode - Use shared demo user instead of authentication
# Set to 'true' to skip login and use demo user (still connects to Supabase)
VITE_DEMO_MODE=true

# OpenWeather API Key - Get from https://openweathermap.org/api
VITE_OPENWEATHER_API_KEY=your_openweather_api_key_here

# Google Maps API Key - Get from https://console.cloud.google.com/
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
